@model VaccinationRecord.Models.PatientsListViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Пациенты</h2>
<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Фамилия: </label>
        @Html.TextBox("lastname", Model.Lastname, htmlAttributes: new { @class = "form-control" })
        <label class="control-label">Имя: </label>
        @Html.TextBox("firstname", Model.Firstname, htmlAttributes: new { @class = "form-control" })
        <label class="control-label">Отчество: </label>
        @Html.TextBox("patronymic", Model.Patronymic, htmlAttributes: new { @class = "form-control" })
        <label class="control-label">СНИЛС: </label>
        @Html.TextBox("snils", Model.SNILS, htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Поиск" class="btn btn-default" />
    </div>
</form>

<p>
    @Html.ActionLink("Добавить пациента", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Фамилия
        </th>
        <th>
            Имя
        </th>
        <th>
            Отчество
        </th>
        <th>
            Дата рождения
        </th>
        <th>
            Пол
        </th>
        <th>
            СНИЛС
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Patients)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Patronymic)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Birthday)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SNILS)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Информация", "Details", new { id = item.Id }) |
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
        </td>
    </tr>
    }

</table>
