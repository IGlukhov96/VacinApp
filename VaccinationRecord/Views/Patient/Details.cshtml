        </th>
        <th>
            Дата прививки
        </th>
        <th></th>
    </tr>

    @foreach (Vaccination item in ViewBag.Vacctinations)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Drug.Name)
            </td>
