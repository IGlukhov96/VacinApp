                @Html.DisplayFor(modelItem => item.Agreement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", "Vaccination", new { id = item.Id }, null) |
                @*@Html.ActionLink("Details", "Details", "Vaccination", new { id = item.Id }, null) |*@
                @Html.ActionLink("Удалить", "Delete", "Vaccination", new { id = item.Id }, null)
            </td>
        </tr>
    }

</table>

